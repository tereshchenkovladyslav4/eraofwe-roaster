{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": ["es2018", "dom"],
        "paths": {
            "@app/*": ["src/app/*"],
            "@components": ["src/app/components/index"],
            "@env/*": ["src/environments/*"],
            "@modules/*": ["src/app/modules/*"],
            "@shared": ["src/app/shared/index"],
            "@core/*": ["src/core/*"],
            "@services": ["src/core/services/index"],
            "@models": ["src/core/models/index"],
            "@constants": ["src/core/constants/index"],
            "@enums": ["src/core/enums/index"],
            "@guards": ["src/core/guards/index"],
            "@utils": ["src/core/utils/index"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
